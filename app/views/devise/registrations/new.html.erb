<% content_for :header do %>
  <h2>Sign up</h2>
<% end %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, autofocus: true, autocomplete: "name", required: true, placeholder: "Enter your name" %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, autocomplete: "email", required: true, placeholder: "Enter your email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", required: true, placeholder: "Enter your password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", required: true, placeholder: "Confirm your password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class:"btn" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
